doctype html
html 
  head
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous")
    link(rel="stylesheet" href="/css/style.css") 
  body
    nav.navbar.navbar-custom.navbar-expand-lg
      .container  
        a.navbar-brand(href='/' style='color: #E30202') Vinylapalooza
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            if user
              li.nav-item
                a.nav-link(href='/vinyls/' style='color: #E30202') Collections
              li.nav-item
                a.nav-link(href='/vinyls/user' style='color: #E30202') #{user.username}'s Collection 
                  span.sr-only (current)
              li.nav-item
                a.nav-link(href='/vinyls/add_vinyls' style='color: #E30202') Add Vinyl
          ul.navbar-nav.ml-auto
            if user
              li 
                a.nav-link(href='/users/logout' style='color: #E30202') Logout  
            else 
              li
                a.nav-link(href='/users/register' style='color: #E30202') Register
              li
                a.nav-link(href='/users/login' style='color: #E30202') Login
               
    


    .container
      != messages('message', locals)
      block content
      br
      br
    footer
      p Copyright &copy; 2018    
