extends layout

block content
  .container
    h1.singlepage-title [`Welcome #{user.username} !`]
  .container.row.d-flex.flex-row.justify-content-around.mt-5
    each vinyl, i in vinyls
      .card-deck
        .card.card-overlay.shadow.p-3.mb-5.bg-white.rounded.mb-5(style='width: 20rem;')
          - var img = vinyl.cover
          img(src='/uploads/'+ img, alt='Card image cap').card-img-top
          .card-body.card-title-overlay
            a(href="/vinyls/user/"+vinyl._id).card-title= vinyl.title
